<!-- :class="(sliderIndex === j ? 'active' : '')"  -->
<div class="carousel-inner" v-if="doc.media && doc.media.length > 0"
	@mouseover="changeDocIndex(i)" @touchstart="changeDocIndex(i)">
	<div class="carousel-item" v-for="(item, j) in doc.media" 
	:style="{opacity: (sliderIndex === j ? 1 : 0 ) }">
		<img class="d-block w-100" :src="item.image+'?version='+Math.random()" :alt="'Slide '+ j"/>
		<div class="carousel-caption d-md-block">
			<h5 v-text="doc.category"></h5>
			<p v-text="item.caption"></p>
		</div>
	</div>
</div>